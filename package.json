{
  "name": "screen-capturer",
  "version": "1.0.0",
  "description": "Screen Capturer",
  "main": "index.html",
  "chromium-args": "--mixed-context",
  "window": {
    "show": true,
    "frame": false,
    "width": 580,
    "height": 320,
    "min_width": 450,
    "min_height": 320,
    "position": "center",
    "resizable": true,
    "icon": "./assets/icon-48x48.png"
  },
  "dependencies": {
    "material-ui": "^0.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-tap-event-plugin": "^3.0.2",
    "redux": "^3.7.2",
    "redux-act": "^1.7.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "nw": "^0.29.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^5.0.1"
  },
  "scripts": {
    "start": "nw .",
    "build": "webpack",
    "dev": "webpack -d --watch"
  }
}
